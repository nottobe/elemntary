{
  "name": "elemntary",
  "version": "0.2.1-unstable",
  "description": "Wahoo Missing Configuration GUI App",
  "main": "src/electron/main.js",
  "author": "Viacheslav Tykhanovskyi",
  "license": "MIT",
  "scripts": {
    "start": "webpack --mode production && npx tailwindcss -i ./src/ui/input.css -o ./dist/styles.css && cross-env NODE_ENV=development electron-forge start",
    "package": "webpack --mode production && npx tailwindcss -i ./src/ui/input.css -o ./dist/styles.css && electron-forge package",
    "make": "webpack --mode production && npx tailwindcss -i ./src/ui/input.css -o ./dist/styles.css && electron-forge make",
    "format": "prettier --write '{src,tests}/**/*.{js,jsx,ts,tsx,css,md,json}'",
    "test": "jest"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.0.3",
    "imports-loader": "^4.0.1",
    "jest": "^29.0.1",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "extract-zip": "^2.0.1",
    "electron-context-menu": "^3.5.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "tests/",
          "tmp/"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "elemntary"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "linux",
            "win32",
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
